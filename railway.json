{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
        "builder": "NIXPACKS"
    },
    "deploy": {
        "runtime": "V2",
        "numReplicas": 1,
        "startCommand": "cd backend && gunicorn app:app --bind 0.0.0.0:$PORT",
        "sleepApplication": false,
        "multiRegionConfig": {
            "us-east4-eqdc4a": {
                "numReplicas": 1
            }
        },
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}